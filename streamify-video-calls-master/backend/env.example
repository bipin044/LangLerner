# LinguaLink Backend Environment Variables
# Copy this file to .env and fill in your actual values

NODE_ENV=production
PORT=10000

# MongoDB Atlas Connection String
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/lingualink?retryWrites=true&w=majority

# Stream API Credentials
STEAM_API_KEY=your_stream_api_key_here
STEAM_API_SECRET=your_stream_api_secret_here

# JWT Secret (generate a strong random string)
JWT_SECRET_KEY=your_super_secure_jwt_secret_here 